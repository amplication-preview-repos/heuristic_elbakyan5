datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Location {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  latitude  Float?
  longitude Float?
  updatedAt DateTime @updatedAt
}

model SocialPost {
  author     String?
  content    String?
  createdAt  DateTime  @default(now())
  datePosted DateTime?
  id         String    @id @default(cuid())
  updatedAt  DateTime  @updatedAt
}

model Feed {
  createdAt   DateTime  @default(now())
  dateCreated DateTime?
  id          String    @id @default(cuid())
  post        String?
  updatedAt   DateTime  @updatedAt
}

model Bathroom {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        String?
  rating      Int?
  updatedAt   DateTime @updatedAt
}
